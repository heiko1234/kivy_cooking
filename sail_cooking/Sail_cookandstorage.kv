MDScreenManager:
    WelcomeWindow:
    SetupWindow:


<WelcomeWindow>:
    name: "welcomewindow"

    GridLayout:
        cols: 1
        size_hint: 0.6, 0.6
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image: 
            source: "assets/logo/SAIL_Cook_and_Storage.png"

        # MDRectangleFlatButton:
        MDRoundFlatIconButton:
            text: "Los aufs Wasser"
            icon: "sail-boat"
            theme_text_color: "Custom"
            text_color: "blue"
            line_color: "blue"
            halign: "center"
            size_hint: (0.1, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: 
                root.entrance_button_behavior()



<SetupWindow>:
    name: "setupwindow"

    # number_of_questions: number_of_questions

    GridLayout:
        cols: 1
        size_hint: 0.995, 0.995




